generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model User {
  id             String          @id @default(uuid())
  name           String
  email          String          @unique
  passwordHash   String
  role           Role
  createdAt      DateTime        @default(now())

  services       Service[]
  appointments   Appointment[]
}

model Service {
  id                String          @id @default(uuid())
  name              String
  type              ServiceType
  providerId        String
  provider          User            @relation(fields: [providerId], references: [id])
  durationMinutes   Int
  createdAt         DateTime        @default(now())

  availability      Availability[]
  appoinments       Appointment[]
}

model Availability {
  id             String          @id @default(uuid())
  serviceId      String
  service        Service         @relation(fields: [serviceId], references: [id])
  dayOfWeek      Days
  startTime      String
  endTime        String
}

model Appointment {
  id                String          @id @default(uuid())
  userId            String
  user              User            @relation(fields: [userId], references: [id])
  serviveId         String
  service           Service         @relation(fields: [serviveId], references: [id])
  date              DateTime
  startTime         String
  endTime           String
  slotId            String          @unique // serviceID_date_startTime
  status            Status
  createdAt         DateTime        @default(now())
}

enum Role {
  USER 
  SERVICE_PROVIDER
}

enum ServiceType {
  MEDICAL
  HOUSE_HELP
  BEAUTY
  FITNESS
  EDUCATION
  OTHER
}

enum Status {
  BOOKED
  CANCELLED
}

enum Days {
  Sunday
  Monday
  Tuesday
  Wednesday
  Thursday
  Friday
  Saturday
}